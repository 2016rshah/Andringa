@media screen and (max-width 768px) 

	.container
		.header
			font-size 80%
			.nav
				li
					a.nav-link
						widtn 160px
		.wrapper 
			font-size 80%
			margin-top 60px
			section
				.content 
					width 100%
					h2
						font-size 1.8em
					.col
						-webkit-column-width 50%
						-moz-column-width 50%
						column-width 50%
						-webkit-column-count 2
						-moz-column-count 2
						column-count 2

@media screen and (max-width 320px) 
	.container
		.header:not(.frontpage)
			padding 0px
			top -20px
			h1 
				margin-bottom 0
				display none
			.main-nav
				li
					a.nav-link
						font-size 30px
						width 100%
						margin auto
						text-align center
						margin 0px
						padding 0px
						top 2px
						&:not(.currentLink)
							display none

		.header.frontpage
			top 0px !important
			padding 0px
			h1
				display block
				margin-bottom 0
			.main-nav
				padding 0
				li
					display block
					margin auto
					a.nav-link
						display block
						width 100%
						text-align center
						margin auto
						display block
		.wrapper
			margin-top 0px
			top 0px
			section
				background-position 0 28em
				background-size 100%
				position relative
				padding 0px
				margin-top 20px
				.content
					font-size 1em
					margin 0px
					padding 4px
					h2
						margin 0 0 1em
					.col
						-webkit-column-width auto
						-moz-column-width auto
						column-width auto
						-webkit-column-count auto
						-moz-column-count auto
						column-count auto
					.footer.social
						display none
					a.project-button
						width 100% !important
						margin auto !important
			#section-2
				top -100%
			#section-3
				top -210%
			#section-4
				top -315%
			#section-5
				top -420%

			&.current
				width 90%
			&.left
				right 5%
			&.right
				left 95%


			//Page-specific
			#page-2
				img.profile
					display block
					margin auto
					float none

