@media screen and (max-width 72.875em) 

	.container
		.header
			font-size 80%
			.nav
				li
					a.nav-link
						widtn 160px
		.wrapper 
			font-size 80%
			section
				.content 
					width 85%
					h2
						font-size 1.8em
					.col
						-webkit-column-width 50%
						-moz-column-width 50%
						column-width 50%
						-webkit-column-count 2
						-moz-column-count 2
						column-count 2

@media screen and (max-width 45.25em) 
	.container
		header
			h1 
				margin-bottom 0
		.wrapper 
			font-size 80%
			section
				background-position 0 28em
				background-size 100%
				.content
					h2
						margin 0 0 1em
					.col
						-webkit-column-width auto
						-moz-column-width auto
						column-width auto
						-webkit-column-count auto
						-moz-column-count auto
						column-count auto
