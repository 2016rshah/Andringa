// Normalize
@import 'normalize.css'

// FontAwesome
@import 'font-awesome.css'

// Nib
@import 'nib'

backgroundColor = #ecf0f1
linkHoverColor = #0099CC
titleColor = #2c3e50s

headerHeight = 180px

socialSize = 70px
// Should always == -1 * (socialSize / 2)
socialCircleOffset = -35px
socialFontSize = 40px
socialMargin = 25px

facebookColor = #3B5998
twitterColor = #55ACEE
linkedinColor = #4875B4
envelopeColor = #D14836
rssColor = #FF6600
dropboxColor = #007ee5
githubColor = #000000


@import '_typography'

*, *:after, *::before
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box

html, body, .container
	position relative
	width 100%
	height 100%

body
	color #000
	background backgroundColor
	padding 0
	margin 0


.no-touch .container
	overflow-x hidden


.container
	.header
		z-index 200
		margin 0 auto
		padding 2em
		position absolute
		top 1px
		left 10%
		width 80%
		text-align center
		-webkit-backface-visibility hidden
		transition top 0.5s
		&.frontpage
			top 250px
		h1
			margin 0 0 0.3em 0
			padding 0

		span
			display block
			padding 0 0 0.6em 0.1em
			font-size 60%
			font-weight 400
			color #000
		.main-nav
			position relative
			display block
			margin 0 auto
			padding 0
			list-style none
			li
				display inline-block
				margin-bottom 10px
				text-align center
				text-decoration none
				z-index 1
				a.nav-link
					position relative
					display inline-block
					margin 0 10px
					padding 10px 5px
					outline none
					transition color 0.5s, opacity 0.5s

					&::before, &::after
						position absolute
						left 0
						width 100%
						height 1px
						background #000
						content ''
						opacity 0
						transition opacity 0.5s, transform 0.5s, background 0.5s
						transform translateY(-10px)

					&::before
						top 0
						transform translateY(-10px)

					&::after
						bottom 0
						transform translateY(10px)

					&.currentLink
						opacity 1
						&::after
							opacity 1
							transform translateY(0px)

				&:hover, &:focus
					& a.nav-link
						opacity 1 !important
						&::before, &::after
							opacity 1 !important
							transform translateY(0px) !important

		&:hover a.nav-link
			opacity 0.7 !important
			&::after
				opacity 0 !important
				transform translateY(10px) !important

	.wrapper
		position relative
		display block
		width 100%
		height 1px //forces children to work with min-height
		margin-top headerHeight
		min-height 625px
		section
			z-index 1
			background-position 100% 0
			background-repeat no-repeat
			position absolute
			top 0
			left 10%
			visibility hidden
			width 80%
			height 1px
			min-height 100%
			-webkit-backface-visibility hidden
			padding 0px 50px
			&:not(.current)
				overflow hidden
			.content
				position relative
				display block
				margin auto
				padding 1em 0
				width 95%
				height 1px
				min-height 100%
				
				h2
					position relative
					margin 30px 0 40px
					
				.body
					min-height 100%
					height auto !important
					height 100%
					margin 0 auto -100px
				.footer
					height 100px
					margin-bottom 100px
		.left, .left-outer, .current, .right, .right-outer
			visibility visible
		.left
			left -70%
		.left-outer
			left -150%
		.current
			position relative
			z-index 100
		.right
			left 90%
		.right-outer
			left 170%
	.sidenav > div
			position fixed
			top 0
			z-index 500
			width 10%
			height 100%
			background rgba(0,0,0,0.3)
			cursor pointer
			-webkit-transition background 0.3s
			transition background 0.3s
			&:hover
				background rgba(0,0,0,0.2)
		.sidenav-left
			left 0px
		.sidenav-right
			right 0px

	&.move-left
		.left, .current, .right, .right-outer
			-webkit-transition -webkit-transform 0.5s
			transition transform 0.5s
			-webkit-transform translate3d(-100%,0,0)
			transform translate3d(-100%,0,0)

	&.move-right
		// .nav-current, .nav-left, .nav-right, .nav-right-outer, .nav-left-outer
		// 	-webkit-transition -webkit-transform 0.5s, opacity 0.5s
		// 	transition transform 0.5s, opacity 0.5s
		// 	-webkit-transform translate3d(100%,0,0)
		// 	transform translate3d(100%,0,0)
		// .nav-left
		// 	a.nav-link
		// 		border-color #fff
		// 		color #fff
		// .nav-right
		// 	opacity 0
		// .nav-current
		// 	a.nav-link
		// 		border-color #893027
		// 		color #893027
		.left, .left-outer, .current, .right
			-webkit-transition -webkit-transform 0.5s
			transition transform 0.5s
			-webkit-transform translate3d(100%,0,0)
			transform translate3d(100%,0,0)

	&.speed
		.left, .left-outer, .current, .right
			transition-timing-function linear
.navHelp
	display none
	width 100%
	text-align center
	position absolute
	z-index 101
	bottom 80px

.social
	display none
	text-align center
	width 100%
	a
		background rgba(0,0,0,0)
		border-radius socialSize
		border 0px !important
		cursor pointer
		display inline-block
		font-size socialFontSize
		height socialSize 
		line-height 25px			
		margin 0 socialMargin
		position relative
		text-align center
		user-select none
		width socialSize 
		.circle
			border-radius 0
			display block
			height 0
			left 50%
			margin 0
			position absolute
			top 50%
			transition all 0.3s
			width 0
		.fa
			background none
			color white
			height socialSize 
			line-height socialSize 
			width socialSize 
			position absolute
			top 0
			left 0
			bottom 0
			transition all 0.3s
			z-index 10
			height 100%
			text-align center
		&:hover
			.circle
				width socialSize 
				height socialSize 
				border-radius socialSize 
				margin socialCircleOffset
			.fa
				color #FFF !important
		&.facebook
			.circle
				background facebookColor
			.fa
				color facebookColor
		&.twitter
			.circle
				background twitterColor
			.fa
				color twitterColor
		&.linkedin
			.circle
				background linkedinColor
			.fa
				color linkedinColor
		&.email
			.circle
				background envelopeColor
			.fa
				color envelopeColor
		&.rss
			.circle
				background rssColor
			.fa
				color rssColor
		&.dropbox
			.circle
				background dropboxColor
			.fa
				color dropboxColor
		&.github
			.circle
				background githubColor
			.fa
				color githubColor

.current, .left, .right
	.social
		display block			

@import '_sections'	
@import '_mq'			